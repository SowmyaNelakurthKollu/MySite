@{
    ViewBag.Title = "- About Me";
}

<div class="container mt-3">
    <!-- Resume Download -->
    <div class="row justify-content-center">
        <span class="padding-headers restext">
            Resume :
            <a class="text-primary" href="~/Scripts/src/Attachments/Sowmya Nelakurthi_CV.pdf" download>
                <span class="padding-headers resdownl">Click here to download</span>
            </a>
        </span>
    </div>

    <!-- Work Experience -->
    <div class="row workexpad mt-3">
        <div class="col-lg-8 col-md-12" oncontextmenu="return false;">
            <div class="rounded p-4 bg-light">
                <div class="skillset pb-4">
                    <div class="row pb-3">
                        <span class="headingofskills text-primary">Work Experience</span>
                    </div>
                    <div class="row">
                        <span class="subheadingofskills text-primary">Senior Software Engineer in ThinkBridge</span>
                    </div>
                    <div class="row pt-3">
                        <span class="matterfont text-dark">
                            I am a self-starter with strong interpersonal skills. I seek new challenges and try to think out-of-the-box while looking for creative solutions to a given problem. I believe in character, values, vision and action. I am a quick learner and believe in learning from my mistakes, for I strongly feel that this virtue will take me ahead in life and career.
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-12" oncontextmenu="return false;">
            <div class="row margincenter imgworkexpad text-dark">
                @foreach (var img in new[] { "IBM_Event.jpg", "IBM_Marotan.jpg", "Match_IBM.jpg", "Project_IBM.jpg" })
                {
                    <div class="col-6 padimgsmall">
                        <img class="img-fluid rounded border border-primary" src="~/Scripts/src/Attachments/@img" alt="IBM Event Image" />
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Badges of my skills -->
    <div class="row mt-4" oncontextmenu="return false;">
        <span class="subheadingofskills text-primary">Badges in IBM</span>
    </div>
    <div class="row pt-4">
        @foreach (var badge in new[] {
            "Cognitive_Practitioner.png",
            "Enterprise_Design_Thinking.png",
            "Data_Science_Foundation_level1.png",
            "IBM_Garage_Method_CloudExplorer.png"
        })
        {
            <div class="col-lg-3 col-md-6 col-sm-6 mb-3">
                <img class="img-fluid center-block" src="~/Scripts/src/Attachments/@badge" alt="IBM Badge" />
            </div>
        }
    </div>

    <!-- Skills -->
    <div class="row mt-5" oncontextmenu="return false;">
        <div class="col-lg-8 col-md-12 pt-3">
            <div class="rounded p-4 bg-light">
                <div class="skillset px-3 pb-4">
                    <div class="row">
                        <h2 class="headingofskills mattercenter text-primary">Technical Skills</h2>
                    </div>
                    <div class="row pt-4">
                        <span class="matterfont text-dark">
                            Five years of experience in .NET development, design, and execution of business applications. Extensive programming experience using ASP.NET 4.7, VB.NET, MVC, HTML, MySQL, and XML. Excellent communication skills and a strong background working directly with coworkers and clients to identify business objectives and establish requirements.
                        </span>
                    </div>
                </div>
            </div>
        </div>
        @foreach (var skill in new[] {
            new { Img = "Dot.png", Title = "DOTNET", Desc = "Familiarity with ASP.NET 4.7 framework, SQL Server, and design/architectural patterns like MVC. 2 years of development experience using C#. Knowledge of C#, Visual Basic .NET, SQL Server, HTML5/CSS3." },
            new { Img = "Angular.png", Title = "ANGULAR", Desc = "Experience designing/developing Angular applications using HTML, CSS, Bootstrap. Focused on code reuse and timely delivery of project deliverables." },
            new { Img = "MySQL.png", Title = "MYSQL", Desc = "3 years of experience developing databases, identifying and resolving issues, and planning capacity expansion for scalability." },
            new { Img = "AWS.png", Title = "AWS Cloud", Desc = "Knowledge of AWS services like S3, EC2, SNS, and deploying highly available, fault-tolerant systems. AWS Cloud Computing Certification." }
        })
        {
            <div class="col-lg-4 col-md-6 col-sm-12 pt-3 text-light">
                <div class="container bg-primary rounded p-4">
                    <div class="row">
                        <img class="skilssimg" src="~/Scripts/src/Attachments/@skill.Img" alt="@skill.Title" />
                    </div>
                    <div class="row">
                        <span class="mattercenter textheading">@skill.Title</span>
                    </div>
                    <div class="row">
                        <span class="mattercenter skillsgapbtn">@skill.Desc</span>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Certifications -->
    <div class="mattercenter gapcer text-dark mt-5">
        <span class="headingofskills">Certifications</span>
    </div>
    <div class="container caroselbor">
        <div class="row">
            <div class="col-12">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner rounded border border-primary">
                        <div class="carousel-item active">
                            <img class="d-block w-100 carouselimgprop" src="~/Scripts/src/Attachments/Udemy.png" alt="Udemy Certificate" />
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 carouselimgprop" src="~/Scripts/src/Attachments/AWS Certificate.png" alt="AWS Certificate" />
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 carouselimgprop" src="~/Scripts/src/Attachments/Watson Certificate.png" alt="Watson Certificate" />
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 carouselimgprop" src="~/Scripts/src/Attachments/DataScience Certificate.png" alt="DataScience Certificate" />
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>