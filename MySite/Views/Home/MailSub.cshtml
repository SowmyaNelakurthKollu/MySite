@model MySite.Models.MailModel

@{
    ViewBag.Title = "MailSub";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "w-100" }))
{
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <div class="container">
        <div class="row justify-content-center py-5">
            <div class="col-lg-6 col-md-8 col-sm-12 matpad" style="background-color:#AC3B61; box-shadow:2px 2px 8px #888; border-radius:15px;">
                <div class="py-4">
                    <h5 class="mailhead text-center text-white mb-4">I WOULD LIKE TO HEAR FROM YOU!</h5>

                    <div class="form-group row">
                        <label for="To" class="col-sm-4 col-form-label textbold text-white">Mail ID:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.To, new { @class = "form-control", @id = "To", @placeholder = "Your email address" })
                            @Html.ValidationMessageFor(m => m.To, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="Subject" class="col-sm-4 col-form-label textbold text-white">Subject:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @id = "Subject", @placeholder = "Subject" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="Body" class="col-sm-4 col-form-label textbold text-white">FeedBack:</label>
                        <div class="col-sm-8">
                            @Html.TextAreaFor(m => m.Body, 4, 40, new { @class = "form-control", @id = "Body", @placeholder = "Your feedback" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-8 text-right">
                            <input class="btn btn-primary textbold" type="submit" value="Send" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}